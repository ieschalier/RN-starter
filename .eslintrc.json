{
    "parser": "babel-eslint",
    "extends": ["airbnb", "plugin:flowtype/recommended"],
    "plugins": [
        "flowtype"
      ],
    "env": {
        "browser": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "rules": {
        "semi": 0,
        "react/jsx-filename-extension": 0,
        "flowtype/no-types-missing-file-annotation": 0
    },
    "settings": {
        "flowtype": {
          "onlyFilesWithFlowAnnotation": false
        }
      }
}
